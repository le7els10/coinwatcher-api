<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
    <title>PiecesPHP Framework</title>
    <parser>
        <target>code</target>
        <encoding>utf8</encoding>
        <extensions>
            <extension>php</extension>
        </extensions>
    </parser>
    <transformer>
        <target>code</target>
    </transformer>
    <transformations>
        <template name="responsive" />
    </transformations>
    <files>
        <directory>../src/app/core</directory>
        <directory>../src/app/controller</directory>
        <directory>../src/app/model</directory>
        <ignore>../src/app/config</ignore>
        <ignore>src/app/core/system-models/*</ignore>
        <ignore>src/app/core/system-conrrollers/*</ignore>
        <ignore>src/app/core/system-views/*</ignore>
    </files>
</phpdoc>
